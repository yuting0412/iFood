<!DOCTYPE html>
<html lang="en">
<html>
  <head>
    <title>iEat</title>
    <link rel="stylesheet" href="/stylesheets/mainPage.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>
  <body>
    <% include ./navBar/navBar.ejs %>
    <div class="SearchBackGround">
      <input type="text" class="SearchBox" value placeholder="想搜什麼就搜什麼">
      <div class="icon">  
        <a href="./working.html">
          <img src="/images/search.png" width="40" height="35">
        </a>
      </div>
    </div>

    <div class="filterBar">
      <span class="filterLabel">篩選條件</span> 
      <div class="btn-group">
        <div class="dropdown">
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            星級評等
            <div class="dropdown-icon">
              <img src="/images/star.png" width="20" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            價格
            <div class="dropdown-icon">
              <img src="/images/price.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu keep-open" id = "priceBar">
            <div class="container">
              <div class = "row">
                <div id="hslider"></div>
              </div>
              <div class="row">
                <div class="col-5">
                  <span>下限:</span>
                  <input id="hsliderInput_L" type = "text">
                </div>
                <div class="col-3"></div>
                <div class="col-4">
                  <span>上限:</span>
                  <input id="hsliderInput_H" type = "text">
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- 載入縣市的鄉鎮市區 -->
        <div class="dropdown">
          <button class="pill-dropdown-text btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            地點
            <div class="dropdown-icon">
              <img src="/images/addr.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu" id ="town"></div>
        </div>
        <!-- 顯示全部 -->
        <div class="dropdown">
          <button class="pill-dropdown-text btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            顯示全部
            <div class="dropdown-icon">
              <img src="/images/addr.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu wide-dropdown" id = "moreChoose"></div>
        </div>
      </div>
    </div>
    <!-- 下面的餐廳 -->
    <% include ./res/indexRes.ejs %>
    <button class="circle">
      <div class="gmap-icon">
        <a href="./working.html">
          <img src="/images/gmap.png" width="38px" height="45px">
        </a>
      </div>
    </button>
    <!-- bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <!-- slider -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- 自己寫的 -->
    <script src="/javascripts/mainPage.js"></script>
    <script>
      dropdownTown(<%- JSON.stringify(town) %>);
      dropdownSpecial(<%- JSON.stringify(cuisine) %>, '菜系、種類');
      dropdownSpecial(<%- JSON.stringify(special) %>, '特殊需求');
    </script>
  </body>
</html>