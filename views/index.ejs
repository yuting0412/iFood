  <body>
    <% include ./navBar/navBar.ejs %>
    
    <div class="SearchBackGround">
      <input type="text" class="SearchBox" value placeholder="想搜什麼就搜什麼">
      <div class="icon">  
        <a href="./working.html">
          <img src="/images/search.png" width="38" height="38">
        </a>
      </div>
    </div>

    <div class="filterBar">
      <span class="filterLabel">篩選條件</span> 
      <div class="btn-group">
        <div class="dropdown">
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            星級評等
            <div class="dropdown-icon">
              <img src="/images/star.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
        <div class="pill-dropdown-title dropdown ">
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            價格
            <div class="dropdown-icon">
              <img src="/images/price.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu">
            <div id="slider"></div> 
            <div id="hslider" style="width:200px;"></div>
            <p>
              L: <span id="hslider_value_L"></span>
              H: <span id="hslider_value_H"></span>
            </p>
          </div>
        </div>
        <div class="dropdown">
          <button class="pill-dropdown-text btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            地點
            <div class="dropdown-icon">
              <img src="/images/addr.png" width="22" height="22"> 
            </div>
          </button>
          <div class="dropdown-menu">
            <li class="checkbox keep-open dropdown-item"><label><input type="checkbox">&nbsp 埔里鎮</label></li>
            <li class="checkbox keep-open dropdown-item"><label><input type="checkbox">&nbsp 南投市</label></li>
